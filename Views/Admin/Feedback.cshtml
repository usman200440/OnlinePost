@model payment;
@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    var number = 1;
    var contacts = (List<contact>)TempData["contact"];
}
<div class="breadcrumb-wrap mb-20">
    <div class="d-md-flex d-block justify-content-between align-items-center">
        <div class="left">
            <h1>Feedbacks</h1>
        </div>
        <div class="right">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                    <li class="breadcrumb-item"><i class="bi bi-caret-right"></i></li>
                    <li class="breadcrumb-item active" aria-current="page">Feedbacks</li>

                </ol>
            </nav>
        </div>
    </div>
</div>


@* view *@

<div class="col-xl-12 col-lg-12">
    <div class="panel mb-10">
        <div class="panel-heading">
            <span>View Packages</span>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped text-center">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Message</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in contacts)
                        {
                            <tr>
                                <td>@(number++)</td>
                                <td>@c.Name</td>
                                <td>@c.Email</td>
                                <td>@c.Message</td>
                                <td><a class="btn btn-danger text-white" href="#" onclick="confirmDelete('@c.c_id')">DELETE</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    function confirmDelete(pay_id) {
        var result = confirm("Are you sure you want to delete this Payment Type?");
        if (result) {
            window.location.href = "/A_Functionality/del_msg/" + pay_id; // Redirect to the delete action
        }
    }
</script>