                                    @* login *@

                                            <form method="post" id="loginForm" class="form" asp-action="login" asp-controller="Auth">
                                                
                                                <label asp-for="login.Username">Username/Email:</label>
                                                <input asp-for="login.Username" id="loginUsername" required>
                                    
