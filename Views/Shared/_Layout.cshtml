                                           @*  register *@
                                              <form method="post" id="registerForm" class="form" asp-action="register" asp-controller="Auth">
                                         
                                                <label asp-for="register.PUserName">Username:</label>
                                                        <input asp-for="register.PUserName" id="registerUsername" pattern="^[A-Z][a-z0-9]{2,}[0-9]{3,}$" required
                                                        title="First letter capital, followed by 2 or more small letters/numbers, then 3 or more small numbers.">

                                                <label asp-for="register.PEmail">Email:</label>
                                                        <input asp-for="register.PEmail" id="email" pattern="[a-zA-Z0-9._%+-]+gmail\.com" required
                                                        title="Should end with gmail.com">

                                                <label asp-for="register.PPassword">Password:</label>
                                                        <input asp-for="register.PPassword" id="registerPassword" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[\W_]).{8,}$" required
                                                        title="Must contain at least one lowercase letter, one uppercase letter, one digit, and one special character. Minimum length: 8 characters.">
                                                        
