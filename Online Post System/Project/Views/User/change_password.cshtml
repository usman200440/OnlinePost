@model ONLINE_POST.Models.PersonalInformation
@{
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<style>
    .profile-info {
        border: 2px groove white;
        box-shadow: 0px 0px 3px black, inset 0px 0px 2px 2px black;
        padding: 20px;
        margin: auto;
        width: 50%;
    }

    #changePasswordBtn {
        margin-top: 10px;
    }

    table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid #ddd;
    }

    th, td {
        padding: 15px;
        text-align: left;
    }
</style>

<div class="container-fluid py-5 mb-5">
    <div class="container">
        <h2 class="text-primary text-center">Profile Information</h2>
        <div class="profile-info mt-4">
            <!-- Existing profile information -->

            <form asp-action="change_password" asp-controller="U_functionality" id="changePasswordForm" class="mt-4">
                <div class="form-group">
                    <label for="newPassword">New Password:</label>
                    <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                </div>

                <div class="form-group">
                    <label for="confirmPassword">Confirm Password:</label>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                </div>
                <hr />
                <button type="submit" class="btn btn-primary">Change Password</button>
            </form>
        </div>
    </div>
</div>



